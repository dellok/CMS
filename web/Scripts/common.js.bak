
function tabChange(index, count, idPrefix) {
    idPrefix += "_";
    for (var i = 1; i < parseInt(count) + 1; i++) {
        var dID = idPrefix + i;
        document.getElementById(dID).className = "itemTabHide";
    }
    var dID = idPrefix + index;

 

    document.getElementById(dID).className = "itemTabShow";
}


