@model phome_ecms_news
@{
 
var  isShowLeftAD=true;

   
    if (ViewData["isShowLeftAD"]!=null)
	{
         
        isShowLeftAD=Format.DataConvertToBool( ViewData["isShowLeftAD"]);
        		 
	}
}

<table width="630" class="detail-box" border="0" align="center" cellpadding="0" cellspacing="0">
    <tr>
        <td class="tdNewsTitle">

            
            <h2>@Model.title</h2>

        
            @if (!string.IsNullOrEmpty(Model.ftitle))
                                                      
            {
          <h3>@Model.ftitle</h3>
             
            }

        </td>
    </tr>
    <tr>
        <td height="25" align="center" class="tdShowTime">
            @Model.newstime.ToShortDateString() &nbsp;&nbsp;  &nbsp;&nbsp; @Model.befrom  &nbsp;&nbsp;
        </td>
    </tr>

    <tr>
        <td height="25">
            <table width="650" height="1" border="0" cellpadding="0" cellspacing="0" bgcolor="#E5E5E5">
                <tr>
                    <td> </td>
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td height="25">


            <table width="650" border="0" cellpadding="0" cellspacing="0">

                <tbody>
                    <tr>
                        <td height="50"  style=" padding:8px 12px 0px 12px;width:650px;" id="Td1">
                            <p>

                              
                                @if  (isShowLeftAD)
                                {
                                <div id="adImg" class="div_detailpage_adimg">
                                    <script src="/cache/ADJs/新闻详细页_A1_1.js" type="text/javascript" language="javascript"></script>
                                </div>
                                }
                                <span class="txtleft span_news_detailcontent">
                                    @Html.Raw(Model.newstext)
                                </span>
                            </p>
                            <div class="center articles_pager">
                                @Html.Raw(Model.ztid)
                            </div>

                            <div style="width: 98%; height: 20px;">
                            </div>

                        </td>
                    </tr>
                </tbody>
            </table>
        </td>
    </tr>


</table>